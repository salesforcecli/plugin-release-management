{
  "name": "@salesforce/plugin-release-management",
  "description": "A plugin for preparing and publishing npm packages",
  "version": "1.2.1",
  "author": "Salesforce",
  "bugs": "https://github.com/forcedotcom/cli/issues",
  "bin": {
    "sf-release": "bin/run"
  },
  "dependencies": {
    "@oclif/config": "^1",
    "@salesforce/command": "^3.0.5",
    "@salesforce/core": "^2.15.2",
    "@salesforce/kit": "^1.3.3",
    "@salesforce/ts-types": "^1.4.3",
    "aws-sdk": "^2.782.0",
    "chalk": "^4.1.0",
    "cli-ux": "^5.5.1",
    "glob": "^7.1.6",
    "got": "^11.8.0",
    "shelljs": "^0.8.4",
    "standard-version": "^9.0.0",
    "tslib": "^1"
  },
  "devDependencies": {
    "@oclif/dev-cli": "^1",
    "@salesforce/dev-config": "^2.0.0",
    "@salesforce/dev-scripts": "0.6.2",
    "@salesforce/prettier-config": "^0.0.1",
    "@salesforce/ts-sinon": "1.1.3",
    "@types/shelljs": "^0.8.8",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "aws-sdk-mock": "^5.1.0",
    "chai": "^4.2.0",
    "cz-conventional-changelog": "^3.2.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-salesforce": "^0.1.0",
    "eslint-config-salesforce-license": "^0.1.0",
    "eslint-config-salesforce-typescript": "^0.1.0",
    "eslint-plugin-header": "^3.0.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsdoc": "^27.0.3",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.2",
    "mocha": "^7.2.0",
    "nyc": "^15.1.0",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1",
    "shx": "0.2.2",
    "sinon": "^9.0.2",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.3"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "files": [
    "/lib",
    "/messages",
    "/oclif.manifest.json"
  ],
  "homepage": "https://github.com/salesforcecli/plugin-release-management",
  "keywords": [
    "force",
    "salesforce",
    "sfdx",
    "salesforcedx",
    "sfdx-plugin"
  ],
  "license": "BSD-3-Clause",
  "oclif": {
    "commands": "./lib/commands",
    "bin": "sfdx",
    "devPlugins": [
      "@oclif/plugin-help"
    ],
    "topics": {
      "npm": {
        "description": "release npm packages"
      }
    }
  },
  "repository": "salesforcecli/plugin-release-management",
  "scripts": {
    "build": "sf-build",
    "clean": "sf-clean",
    "clean-all": "-clean all",
    "clean:lib": "shx rm -rf lib && shx rm -rf coverage && shx rm -rf .nyc_output && shx rm -f oclif.manifest.json",
    "compile": "sf-compile",
    "docs": "sf-docs",
    "format": "sf-format",
    "lint": "sf-lint",
    "postpack": "shx rm -f oclif.manifest.json",
    "posttest": "yarn lint",
    "prepack": "sf-build",
    "prepare": "sf-install",
    "pretest": "sf-compile-test",
    "test": "sf-test",
    "version": "oclif-dev readme && git add README.md"
  },
  "husky": {
    "hooks": {
      "pre-commit": "sf-husky-pre-commit",
      "commit-msg": "sf-husky-commit-msg",
      "pre-push": "sf-husky-pre-push"
    }
  },
  "publishConfig": {
    "access": "public"
  }
}
