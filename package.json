{
  "name": "@salesforce/plugin-release-management",
  "description": "A plugin for preparing and publishing npm packages",
  "version": "1.9.4",
  "author": "Salesforce",
  "bugs": "https://github.com/forcedotcom/cli/issues",
  "bin": {
    "sf-release": "bin/run"
  },
  "dependencies": {
    "@oclif/config": "^1",
    "@salesforce/command": "^3.0.5",
    "@salesforce/core": "^2.15.2",
    "@salesforce/kit": "^1.3.3",
    "@salesforce/ts-types": "^1.4.3",
    "aws-sdk": "^2.782.0",
    "chalk": "^4.1.0",
    "cli-ux": "^5.5.1",
    "conventional-changelog-conventionalcommits": "^4.5.0",
    "conventional-changelog-preset-loader": "^2.3.4",
    "conventional-commits-parser": "^3.2.0",
    "fast-glob": "^3.2.5",
    "glob": "^7.1.6",
    "got": "^11.8.0",
    "shelljs": "^0.8.4",
    "standard-version": "^9.0.0",
    "tslib": "^2"
  },
  "devDependencies": {
    "@oclif/dev-cli": "^1",
    "@oclif/plugin-command-snapshot": "^2.0.0",
    "@salesforce/cli-plugins-testkit": "^0.0.25",
    "@salesforce/dev-config": "^2.1.0",
    "@salesforce/dev-scripts": "0.9.1",
    "@salesforce/plugin-command-reference": "^1.3.0",
    "@salesforce/prettier-config": "^0.0.2",
    "@salesforce/ts-sinon": "1.3.5",
    "@types/conventional-changelog-preset-loader": "^2.3.1",
    "@types/conventional-commits-parser": "^3.0.1",
    "@types/shelljs": "^0.8.8",
    "@typescript-eslint/eslint-plugin": "^4.2.0",
    "@typescript-eslint/parser": "^4.2.0",
    "aws-sdk-mock": "^5.1.0",
    "chai": "^4.2.0",
    "cz-conventional-changelog": "^3.2.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-salesforce": "^0.1.0",
    "eslint-config-salesforce-license": "^0.1.0",
    "eslint-config-salesforce-typescript": "^0.2.0",
    "eslint-plugin-header": "^3.0.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsdoc": "^27.0.3",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.2",
    "mocha": "^8.3.0",
    "nyc": "^15.1.0",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1",
    "shx": "0.3.3",
    "sinon": "^9.0.2",
    "ts-node": "^8.10.2",
    "typescript": "^4.1.3"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "files": [
    "bin",
    "oclif.manifest.json",
    "/lib",
    "/messages"
  ],
  "homepage": "https://github.com/salesforcecli/plugin-release-management",
  "keywords": [
    "force",
    "salesforce",
    "sfdx",
    "salesforcedx",
    "sfdx-plugin"
  ],
  "license": "BSD-3-Clause",
  "oclif": {
    "commands": "./lib/commands",
    "node": "14.15.4",
    "bin": "sfdx",
    "devPlugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-command-snapshot",
      "@salesforce/plugin-command-reference"
    ],
    "topics": {
      "cli": {
        "description": "get information on the cli",
        "subtopics": {
          "versions": {
            "description": "view CLI versions"
          }
        }
      },
      "circleci": {
        "description": "interact with circleci api",
        "subtopics": {
          "envvar": {
            "description": "update and set environment variables in circleci"
          }
        }
      },
      "npm": {
        "description": "release npm packages",
        "subtopics": {
          "dependencies": {
            "description": "pin dependenices to a specific version in package.json"
          },
          "lerna": {
            "description": "work with lerna npm projects"
          },
          "package": {
            "description": "work with npm projects"
          },
          "release": {
            "description": "validate npm releases"
          }
        }
      },
      "trust": {
        "description": "commands for signing plugins"
      },
      "typescript": {
        "description": "test updates to typescript version"
      }
    }
  },
  "repository": "salesforcecli/plugin-release-management",
  "scripts": {
    "build": "sf-build",
    "clean": "sf-clean",
    "clean-all": "sf-clean all",
    "clean:lib": "shx rm -rf lib && shx rm -rf coverage && shx rm -rf .nyc_output && shx rm -f oclif.manifest.json",
    "compile": "sf-compile",
    "docs": "sf-docs",
    "format": "sf-format",
    "lint": "sf-lint",
    "oclif-artifacts": "oclif-dev manifest",
    "postpack": "shx rm -f oclif.manifest.json",
    "posttest": "yarn lint && yarn test:deprecation-policy && yarn test:command-reference",
    "prepack": "sf-prepack",
    "prepare": "sf-install",
    "pretest": "sf-compile-test",
    "test": "sf-test",
    "test:command-reference": "./bin/run commandreference:generate --erroronwarnings",
    "test:deprecation-policy": "./bin/run snapshot:compare",
    "test:nuts": "nyc mocha \"**/*.nut.ts\" --slow 4500 --timeout 600000 --parallel",
    "version": "oclif-dev readme"
  },
  "husky": {
    "hooks": {
      "pre-commit": "sf-husky-pre-commit",
      "commit-msg": "sf-husky-commit-msg",
      "pre-push": "sf-husky-pre-push"
    }
  },
  "publishConfig": {
    "access": "public"
  }
}
