{
  "name": "@salesforce/plugin-release-management",
  "description": "A plugin for preparing and publishing npm packages",
  "version": "2.8.3",
  "author": "Salesforce",
  "bugs": "https://github.com/forcedotcom/cli/issues",
  "bin": {
    "sf-release": "bin/run"
  },
  "dependencies": {
    "@oclif/config": "^1",
    "@octokit/core": "^3.4.0",
    "@salesforce/command": "^4.2.0",
    "@salesforce/core": "^2.31.0",
    "@salesforce/kit": "^1.5.22",
    "@salesforce/plugin-trust": "^1.1.0",
    "@salesforce/ts-types": "^1.5.20",
    "agent-base": "^6.0.2",
    "aws-sdk": "^2.1043.0",
    "chalk": "^4.1.0",
    "cli-ux": "^5.5.1",
    "conventional-changelog-conventionalcommits": "^4.6.1",
    "conventional-changelog-preset-loader": "^2.3.4",
    "conventional-commits-parser": "^3.2.2",
    "fast-glob": "^3.2.7",
    "glob": "^7.2.0",
    "got": "^11.8.3",
    "oclif": "^1.18.2",
    "proxy-agent": "^5.0.0",
    "proxy-from-env": "^1.1.0",
    "semver": "^7.3.5",
    "shelljs": "^0.8.4",
    "standard-version": "^9.0.0",
    "strip-ansi": "6.0.1",
    "tslib": "^2"
  },
  "devDependencies": {
    "@oclif/dev-cli": "^1",
    "@oclif/plugin-command-snapshot": "^2.2.2",
    "@salesforce/cli-plugins-testkit": "^1.4.11",
    "@salesforce/dev-config": "^2.1.2",
    "@salesforce/dev-scripts": "^1.0.0",
    "@salesforce/plugin-command-reference": "^1.3.16",
    "@salesforce/prettier-config": "^0.0.2",
    "@salesforce/ts-sinon": "1.3.21",
    "@types/conventional-changelog-preset-loader": "^2.3.1",
    "@types/conventional-commits-parser": "^3.0.1",
    "@types/graceful-fs": "^4.1.5",
    "@types/jsforce": "^1.9.35",
    "@types/semver": "^7.3.9",
    "@types/shelljs": "^0.8.8",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "aws-sdk-mock": "^5.4.0",
    "chai": "^4.2.0",
    "cz-conventional-changelog": "^3.2.0",
    "eslint": "^7.27.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-salesforce": "^0.1.6",
    "eslint-config-salesforce-license": "^0.1.6",
    "eslint-config-salesforce-typescript": "^0.2.8",
    "eslint-plugin-header": "^3.0.0",
    "eslint-plugin-import": "2.25.3",
    "eslint-plugin-jsdoc": "^35.1.2",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^7.0.4",
    "lint-staged": "^11.2.3",
    "mocha": "^8.4.0",
    "nyc": "^15.1.0",
    "prettier": "^2.4.1",
    "pretty-quick": "^3.1.0",
    "shx": "0.3.3",
    "sinon": "10.0.0",
    "ts-node": "^10.0.0",
    "typescript": "^4.1.3"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "files": [
    "bin",
    "oclif.manifest.json",
    "/lib",
    "/messages"
  ],
  "homepage": "https://github.com/salesforcecli/plugin-release-management",
  "keywords": [
    "force",
    "salesforce",
    "sfdx",
    "salesforcedx",
    "sfdx-plugin"
  ],
  "license": "BSD-3-Clause",
  "oclif": {
    "commands": "./lib/commands",
    "node": "14.15.4",
    "bin": "sfdx",
    "plugins": [
      "@salesforce/plugin-trust"
    ],
    "devPlugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-command-snapshot",
      "@salesforce/plugin-command-reference"
    ],
    "topics": {
      "cli": {
        "description": "get information on the cli",
        "subtopics": {
          "versions": {
            "description": "interact with CLI versions"
          },
          "tarballs": {
            "description": "interact with CLI tarballs"
          },
          "install": {
            "description": "utilities for CLI installation"
          },
          "latestrc": {
            "description": "utilities for building CLI releases"
          },
          "schemas": {
            "description": "utilities for comparing command schemas"
          }
        }
      },
      "channel": {
        "description": "interact with aws channels for clis"
      },
      "circleci": {
        "description": "interact with circleci api",
        "subtopics": {
          "envvar": {
            "description": "update and set environment variables in circleci"
          }
        }
      },
      "dependabot": {
        "description": "interact with dependabot PRs"
      },
      "npm": {
        "description": "release npm packages",
        "subtopics": {
          "dependencies": {
            "description": "pin dependencies to a specific version in package.json"
          },
          "lerna": {
            "description": "work with lerna npm projects"
          },
          "package": {
            "description": "work with npm projects"
          },
          "release": {
            "description": "validate npm releases"
          }
        }
      },
      "typescript": {
        "description": "test updates to typescript version"
      }
    }
  },
  "repository": "salesforcecli/plugin-release-management",
  "scripts": {
    "build": "sf-build",
    "clean": "sf-clean",
    "clean-all": "sf-clean all",
    "clean:lib": "shx rm -rf lib && shx rm -rf coverage && shx rm -rf .nyc_output && shx rm -f oclif.manifest.json",
    "compile": "sf-compile",
    "docs": "sf-docs",
    "format": "sf-format",
    "lint": "sf-lint",
    "oclif-artifacts": "oclif-dev manifest",
    "postpack": "shx rm -f oclif.manifest.json",
    "posttest": "yarn lint && yarn test:deprecation-policy && yarn test:command-reference",
    "prepack": "sf-prepack",
    "prepare": "sf-install",
    "pretest": "sf-compile-test",
    "test": "sf-test",
    "test:command-reference": "./bin/run commandreference:generate --erroronwarnings",
    "test:deprecation-policy": "./bin/run snapshot:compare",
    "test:nuts": "nyc mocha \"**/*.nut.ts\" --slow 4500 --timeout 600000 --parallel",
    "version": "oclif-dev readme"
  },
  "publishConfig": {
    "access": "public"
  }
}
